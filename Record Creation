import java.lang.*;
import java.util.*;

public class Records {
    private String Name;
    private int TRN = 0;
    private long Telephone;
    private String Address;
    private static ArrayList<Records> RecordDatabase = new ArrayList<Records>();


    public Records(String name, int trn, long telephone, String address) {
        Name = name;
        TRN = trn;
        Telephone = telephone;
        Address = address;
    }

    public String getName() {
        return Name;
    }

    public void setName(String newName) {
        this.Name = newName;
    }

    public int getTRN() {
        return TRN;
    }

    public void setTRN(int NewTRN) {
        this.TRN = NewTRN;
    }

    public long getTelephone() {
        return Telephone;
    }

    public void setTelephone(long newTele) {
        this.Telephone = newTele;
    }

    public String getAddress() {
        return Address;
    }

    public void setAddress(String newAddress) {
        this.Address = newAddress;
    }

    public static void TRNlist(int check){
        for (int i = 0; i < RecordDatabase.size(); i++) {
            if(RecordDatabase.get(i).getTRN() == check){
            System.out.println("Dupliate TRN found");
            System.out.println("Please Ty Again");
            System.exit(0);
            }
            else{continue;}
        }
    }

    public static void addRecord(Records newRecord){
        RecordDatabase.add(newRecord);
    }
    public static void viewRecord(String Name, int TRN){
        for (int i = 0; i < RecordDatabase.size(); i++) {
            if(RecordDatabase.get(i).getName() == Name && RecordDatabase.get(i).getTRN()==TRN){
                System.out.println(RecordDatabase.get(i));
            }
            else{continue;}
        }
    }
    @Override
    public String toString() {
        return "Records " + '\n' +
                " Name: " + Name + '\n' +
                " TRN: " + TRN + '\n' +
                " Telephone: " + Telephone + '\n' +
                " Address: " + Address + '\n';
    }



    public static void main(String[] args) {
        Records off1= new Records("vladimir", 6969, 8990998, "Russia");
        Records off2= new Records("Zelensky", 1000, 989898, "Ukraine");
        Records off3= new Records("Biden", 4600, 76575,"Usa");
        addRecord(off1);
        addRecord(off2);
        addRecord(off3);
        Scanner  scan2 = new Scanner(System.in);
        System.out.println("Enter officer TRN");
        int UserTrn= scan2.nextInt();
        TRNlist(UserTrn);
        Scanner  scan1 = new Scanner(System.in);
        Scanner  scan3= new Scanner(System.in);
        Scanner  scan4 = new Scanner(System.in);
        System.out.println("Enter officer name");
        String UserName= scan1.nextLine();

        System.out.println("Enter officer Telephone  Number");
        long UserNum = scan3.nextLong();

        System.out.println("Enter officer Address");
        String UserAddress= scan4.nextLine();
        Records officer1 = new Records(UserName, UserTrn,UserNum, UserAddress);
        System.out.println("Record Creation successful;");
        addRecord(officer1);
 //     System.out.println(RecordDatabase);
    }
}
